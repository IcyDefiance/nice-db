{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"paths": {
			"@components/*": ["./src/components/*"],
			"@state/*": ["./src/state/*"],
			"@util/*": ["./src/util/*"]
		}
	},
	"files": ["./src/index.tsx"]
}
